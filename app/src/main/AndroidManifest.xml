<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios para Back4App -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TapBattleApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TapBattle"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Pantalla principal -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Lobby para unirse a sala -->
        <activity
            android:name=".ui.LobbyActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Actividad del juego -->
        <activity
            android:name=".ui.GameActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TapBattle.FullScreen" />

        <!-- Resultados finales -->
        <activity
            android:name=".ui.ResultActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Historial de partidas -->
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>