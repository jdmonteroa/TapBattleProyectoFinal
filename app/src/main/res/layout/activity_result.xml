<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Emoji de resultado -->
            <TextView
                android:id="@+id/tvResultEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†"
                android:textSize="120sp"
                android:layout_marginTop="40dp"/>

            <!-- TÃ­tulo de resultado -->
            <TextView
                android:id="@+id/tvResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡VICTORIA!"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginTop="16dp"/>

            <!-- SubtÃ­tulo -->
            <TextView
                android:id="@+id/tvResultSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eres el campeÃ³n"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:layout_marginTop="8dp"/>

            <!-- Card con estadÃ­sticas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESULTADO FINAL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_gravity="center"/>

                    <!-- Puntuaciones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp">

                        <!-- Jugador -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPlayerNameResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jugador"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Juan"/>

                            <TextView
                                android:id="@+id/tvPlayerScoreResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:textColor="#4ECDC4"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="puntos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"/>

                        </LinearLayout>

                        <!-- VS -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VS"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>

                        <!-- Oponente -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvOpponentNameResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oponente"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Maria"/>

                            <TextView
                                android:id="@+id/tvOpponentScoreResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:textColor="#FF6B6B"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="puntos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- InformaciÃ³n adicional -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rondas jugadas: "
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvRoundsPlayed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ”„ JUGAR DE NUEVO"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                android:layout_marginTop="32dp"
                app:backgroundTint="@color/primary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ  MENÃš PRINCIPAL"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>