<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_space_reverse"
    tools:context=".ui.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Emoji animado del resultado -->
            <TextView
                android:id="@+id/tvResultEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†"
                android:textSize="140sp"
                android:layout_marginTop="40dp"
                android:shadowColor="@color/neon_yellow"
                android:shadowRadius="30"/>

            <!-- TÃ­tulo de resultado con efecto pixel -->
            <TextView
                android:id="@+id/tvResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VICTORY"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/pixel_gold"
                android:shadowColor="@color/neon_yellow"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.1"/>

            <!-- SubtÃ­tulo -->
            <TextView
                android:id="@+id/tvResultSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… CHAMPION OF THE STARS â˜…"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textColor="@color/space_cyan"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <!-- Card con estadÃ­sticas espaciales -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="20dp"
                android:backgroundTint="#1A1A2E"
                app:strokeColor="@color/neon_purple"
                app:strokeWidth="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Header del reporte -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â—ˆ BATTLE REPORT â—ˆ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textColor="@color/space_cyan"
                        android:layout_gravity="center"
                        android:shadowColor="@color/neon_purple"
                        android:shadowRadius="10"/>

                    <!-- LÃ­nea decorativa -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/divider_gradient"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Puntuaciones lado a lado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Panel Jugador -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/score_panel_left"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â–¸ YOU"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/neon_green"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvPlayerNameResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PILOT"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:textColor="@color/white"
                                android:layout_marginTop="6dp"
                                tools:text="JUAN"/>

                            <TextView
                                android:id="@+id/tvPlayerScoreResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="64sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:textColor="@color/pixel_gold"
                                android:shadowColor="@color/neon_yellow"
                                android:shadowRadius="20"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HITS"
                                android:textSize="11sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/space_cyan"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- VS Central -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš”"
                                android:textSize="40sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VS"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:textColor="@color/neon_purple"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- Panel Oponente -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/score_panel_right"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RIVAL â—‚"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/neon_pink"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvOpponentNameResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENEMY"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:textColor="@color/white"
                                android:layout_marginTop="6dp"
                                tools:text="MARIA"/>

                            <TextView
                                android:id="@+id/tvOpponentScoreResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="64sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:textColor="@color/pixel_orange"
                                android:shadowColor="@color/neon_orange"
                                android:shadowRadius="20"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HITS"
                                android:textSize="11sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/space_cyan"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/divider_gradient"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Info adicional -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš¡ WAVES COMPLETED: "
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/space_cyan"/>

                        <TextView
                            android:id="@+id/tvRoundsPlayed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textColor="@color/pixel_gold"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acciÃ³n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸ”„ REMATCH"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                app:cornerRadius="20dp"
                android:layout_marginTop="36dp"
                app:backgroundTint="@color/neon_purple"
                app:strokeColor="@color/neon_pink"
                app:strokeWidth="2dp"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToMenu"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="ðŸ  SPACE DOCK"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                app:cornerRadius="18dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="3dp"
                app:strokeColor="@color/space_cyan"
                android:textColor="@color/space_cyan"/>

            <!-- Footer decorativo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… MISSION COMPLETE â˜…"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="@color/space_cyan"
                android:alpha="0.6"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>