<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_space_background"
    tools:context=".ui.LobbyActivity">

    <!-- TÃ­tulo con efecto pixel -->
    <TextView
        android:id="@+id/tvLobbyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ›¸ SPACE BAY"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/pixel_gold"
        android:shadowColor="@color/neon_yellow"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- Card principal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLobby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLobbyTitle"
        android:layout_margin="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="16dp"
        android:backgroundTint="#1A1A2E"
        app:strokeColor="@color/neon_purple"
        app:strokeWidth="2dp"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Nombre del jugador con estilo retro -->
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PILOT: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/neon_green"
                android:layout_gravity="center"
                android:shadowColor="@color/neon_green"
                android:shadowRadius="8"/>

            <!-- Input cÃ³digo con estilo espacial -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRoomCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ”‘ STATION CODE"
                android:layout_marginTop="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeColor="@color/space_cyan"
                app:hintTextColor="@color/space_cyan"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/space_dark_less">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRoomCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ FORMAT: STAR001"
                android:textSize="12sp"
                android:textColor="@color/space_cyan"
                android:fontFamily="monospace"
                android:alpha="0.7"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"/>

            <!-- BotÃ³n unirse con efecto neÃ³n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinRoom"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="ðŸšª DOCK STATION"
                android:textSize="19sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                app:cornerRadius="18dp"
                android:layout_marginTop="24dp"
                app:backgroundTint="@color/neon_purple"
                android:textColor="@color/white"
                app:strokeColor="@color/neon_pink"
                app:strokeWidth="2dp"/>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/space_cyan"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/neon_green"
                android:fontFamily="monospace"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:text="âš¡ CONNECTING..."/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Card esperando -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWaiting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLobby"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:backgroundTint="#1A1A2E"
        app:strokeColor="@color/neon_green"
        app:strokeWidth="2dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›¸"
                android:textSize="56sp"/>

            <TextView
                android:id="@+id/tvWaitingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCANNING FOR PILOTS..."
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/neon_green"
                android:textAlignment="center"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvRoomCodeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATION: STAR001"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="@color/space_cyan"
                android:layout_marginTop="8dp"/>

            <!-- BotÃ³n iniciar para creador -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartGame"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="â–¶ï¸ LAUNCH BATTLE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                app:cornerRadius="16dp"
                android:layout_marginTop="20dp"
                app:backgroundTint="@color/neon_green"
                android:textColor="@color/space_dark"
                app:strokeColor="@color/pixel_gold"
                app:strokeWidth="2dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>